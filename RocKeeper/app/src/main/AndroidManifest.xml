<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="activities.rockeeper" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="transcend.rockeeper.activities.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="transcend.rockeeper.activities.MainActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="transcend.rockeeper.activities.FirstTimePage"
            android:label="@string/title_activity_first_time_page">
        </activity>
        <activity
            android:name="transcend.rockeeper.activities.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
    </application>

</manifest>
